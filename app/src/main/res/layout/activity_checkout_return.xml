<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/color_333333"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:text="Library_CHENXUNLIU"
            >

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_table_name"
            android:textSize="25dp"
            android:text="Check Out &amp; Return"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:width="100dp"
            android:gravity="right"
            android:textSize="20dp"
            android:text="Student ID">

        </TextView>
        <EditText
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_et"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >

        </EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20dp"
            android:width="100dp"
            android:gravity="right"
            android:text="Book ID">

        </TextView>
        <EditText
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_et"
            android:paddingRight="5dp"

            android:paddingLeft="5dp"
            >

        </EditText>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:width="100dp"
        android:gravity="right"
        android:layout_marginLeft="20dp"
        android:text="Date">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1">

        </View>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@drawable/bg_date">
            <TextView
                android:id="@+id/add_month"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="+"
                android:textColor="#333"
                android:textSize="50dp"
                android:includeFontPadding="false"
                android:gravity="center"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="30dp"
                android:text="01"
                android:id="@+id/tv_month"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_text">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="—"
                android:textColor="#333"
                android:textSize="50dp"
                android:includeFontPadding="false"
                android:id="@+id/minus_month"
                android:gravity="center"
                >

            </TextView>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1">

        </View>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@drawable/bg_date">
            <TextView
                android:id="@+id/add_day"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="+"
                android:textColor="#333"
                android:textSize="50dp"
                android:includeFontPadding="false"
                android:gravity="center"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="30dp"
                android:text="Dec"
                android:id="@+id/tv_day"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_text">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="—"
                android:textColor="#333"
                android:id="@+id/minus_day"
                android:textSize="50dp"
                android:includeFontPadding="false"
                android:gravity="center"
                >

            </TextView>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1">

        </View>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@drawable/bg_date">
            <TextView
                android:id="@+id/add_year"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="+"
                android:textColor="#333"
                android:textSize="50dp"
                android:includeFontPadding="false"
                android:gravity="center"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="30dp"
                android:text="2019"
                android:id="@+id/tv_year"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_text">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="—"
                android:textColor="#333"
                android:id="@+id/minus_year"
                android:gravity="center"
                android:textSize="50dp"
                android:includeFontPadding="false"
                >

            </TextView>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1">

        </View>
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:width="150dp"
            android:textSize="15dp"
            android:id="@+id/btn_checkout"
            android:textAllCaps="false"
            android:text="Check Out">
        </Button>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"></View>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:width="150dp"
            android:id="@+id/btn_return"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:text="Return">
        </Button>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:width="170dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:id="@+id/btn_summay"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:text="Summary"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:width="170dp"
        android:id="@+id/btn_go_back"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:text="Back to Main Page"/>



</LinearLayout>